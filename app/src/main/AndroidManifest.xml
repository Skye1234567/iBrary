<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.rededaniskal">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EditBookInstance"></activity>
        <activity
            android:name=".AddBookInstanceActivity"
            android:label="AddBookInstance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".User_Details_Activity" />
        <activity android:name=".Book_Details_Activity" />
        <activity
            android:name="ca.rededaniskal.Register"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="ca.rededaniskal.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignupActivity"></activity>
        <activity
            android:name="ca.rededaniskal.Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="ca.rededaniskal.MainActivity">

        </activity>
        <activity
            android:name="ca.rededaniskal.Edit_Profile_Activity"
            android:label="@string/title_activity_edit__profile_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BarcodeReaderActivity"></activity>

        <activity
            android:name="ca.rededaniskal.Barcode_Scanner_Activity"
            android:label="@string/title_activity_barcode__scanner_"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>