<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Fragments.FragmentViewTextPost">

    <RelativeLayout
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/select_dialog_listview"
        android:visibility="visible"
        >


        <ImageView
            android:id="@+id/RatingPostImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="211dp"
            android:layout_marginBottom="350dp"
            android:src="@drawable/ic_book_black_24dp" />

        <TextView
            android:id="@+id/RatingPostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="243dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="427dp"
            android:text="Title goes here" />

        <TextView
            android:id="@+id/RatingPostAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="243dp"
            android:layout_marginTop="109dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="383dp"
            android:text="Author goes here" />

        <TextView
            android:id="@+id/RatingPostISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="243dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="344dp"
            android:text="ISBN goes here" />

        <TextView
            android:id="@+id/RatingPostUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="214dp"
            android:text="User __ rated __" />

        <TextView
            android:id="@+id/RatingPostRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="255dp"
            android:layout_marginEnd="290dp"
            android:layout_marginBottom="238dp"
            android:text="TextView" />
    </RelativeLayout>


</android.support.v4.widget.SwipeRefreshLayout>